# псевдоклассы
a:visited {  /* ccылки которые уже посещали*/
    color: red;
}
a:link {   /* ccылки которые не посещали*/
    color: orange;
}
input:active {
    color: green;
}
a:hover {   /* ccылки на которые наведен курсор*/
    color: blue;
}


input:invalid {
    background: red;
}
input:valid {
    background: green;
}

input:required {
    border: blue solid 2px; 
    background: yellow;
}

input:optional {
    border: red solid 2px; 
    background: gray;
}

